# ZenithScores Environment Variables Template
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE (Required)
# ===========================================
# Neon PostgreSQL Connection
NEON_HOST=your-neon-host.neon.tech
NEON_DATABASE=your_database
NEON_USER=your_username
NEON_PASSWORD=your_password

# Or use full connection string
# DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# ===========================================
# API KEYS (Required)
# ===========================================
# Google Gemini AI (for AI coach features)
GEMINI_API_KEY=your_gemini_api_key_here

# Alpha Vantage (for stock/forex data)
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here

# ===========================================
# PAYMENT (Required for subscriptions)
# ===========================================
# PayPal Client ID (sandbox or live)
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id_here

# ===========================================
# AUTHENTICATION (Required)
# ===========================================
# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================
# API URL (defaults to Vercel deployment)
# NEXT_PUBLIC_API_URL=https://your-api.vercel.app

# Allowed CORS Origins (comma-separated)
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ===========================================
# SECURITY NOTES
# ===========================================
# 1. NEVER commit .env file to git (ensure .env is in .gitignore)
# 2. Use Vercel/GitHub secrets for production deployments
# 3. Rotate keys immediately if exposed
# 4. Use separate keys for development/staging/production
