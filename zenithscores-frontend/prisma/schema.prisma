  entry_value            Decimal?  @default(0) @db.Decimal(20, 2)
  current_value          Decimal?  @default(0) @db.Decimal(20, 2)
  unrealized_pnl         Decimal?  @default(0) @db.Decimal(20, 2)
  unrealized_pnl_percent Decimal?  @default(0) @db.Decimal(10, 4)
