{
    "version": 2,
    "builds": [
        {
            "src": "merged_api.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "merged_api.py"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/news",
            "schedule": "0 * * * *"
        }
    ],
    "env": {
        "PYTHONUNBUFFERED": "1"
    }
}